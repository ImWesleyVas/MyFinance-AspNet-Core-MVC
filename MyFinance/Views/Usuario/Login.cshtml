@model UsuarioModel

@{
    Layout = "../Shared/_LayoutLogin.cshtml";

}

<div class="col-md-4"></div>
<div class="container col-md-4" style="background-color:#dbd4d4; border-radius:10px; padding: 20px;">

    @{
        try
        {
           
            if (!String.IsNullOrEmpty(TempData["MensagemLoginInvalido"].ToString()))
            {
                <div class="alert alert-warning">
                    <strong>Atenção!</strong> @TempData["MensagemLoginInvalido"]
                </div>
            }
        }
        catch { }
    }
<form asp-controller="Usuario" asp-action="ValidarLogin">
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <label for="pwd">Password:</label>
        <input type="password" class="form-control" asp-for="Senha">
    </div>
    <div class="checkbox">
        <label><input type="checkbox"> Lembrar meu acesso </label>
    </div>
    <button type="button" class="btn btn-primary" onclick="javascript: window.location.href='../Usuario/Registrar'">Registrar</button>
    <button type="submit" class="btn btn-default">Entrar</button>

</form>


</div>
<div class="col-md-4"></div>
